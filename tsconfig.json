{
	"compilerOptions": {
        "target": "ES2016",
        "lib": [
            "ES2016",
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "declaration": true,
        "sourceMap": true,
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.test.*", "dist", "node_modules"]
}
